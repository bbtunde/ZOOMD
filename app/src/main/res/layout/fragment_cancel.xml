<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.overdrivedx.fragments.CancelFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/logo_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/black_shadow"
        android:paddingTop="0sp"
        android:paddingBottom="5sp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cancel Item"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="5sp"
            android:textColor="#fff"
            android:paddingLeft="5sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPanel"
        android:orientation="vertical"
        android:paddingTop="2sp"
        android:paddingBottom="2sp"
        android:paddingLeft="3sp"
        android:paddingRight="3sp"
        android:gravity="center"
        android:layout_below="@id/logo_container"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_details"
            android:textAllCaps="true"
            android:layout_marginBottom="15sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:hint="Please give a reason"
            android:layout_below="@id/item_details"
            android:background="@drawable/grey_shadow"
            android:elevation="4dp"
            android:layout_marginBottom="5sp"
            android:inputType="textMultiLine"
            android:id="@+id/reason"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/cancel_btn"
            />
    </LinearLayout>
</RelativeLayout>
